  "description": "An app for BPLO to display the queue number of the clients",
  "author": {
    "name": "Cybernest Solutions",
    "email": "cns@cybernestsolution.com"
  },
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "electron .",
    "electron-build": "electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.0",
    "@angular/common": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@angular/forms": "^16.2.0",
    "@angular/platform-browser": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.0",
    "@angular/router": "^16.2.0",
    "dexie": "^4.0.10",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "ngx-socket-io": "^4.5.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.1",
    "@angular/cli": "~16.2.1",
    "@angular/compiler-cli": "^16.2.0",
    "@types/jasmine": "~4.3.0",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.1.3"
  },
  "build": {
    "asar": true,
    "appId": "com.queuewise.publicview",
    "productName": "Queuewise Public View",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/.bin",
      "!src",
      "!e2e"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "CybernestSolutions",
        "repo": "queuewise-public"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon-glow.ico"
    }
  }
